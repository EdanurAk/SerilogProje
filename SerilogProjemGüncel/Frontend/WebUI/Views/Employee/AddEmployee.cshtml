@model AddEmployeeViewModel
@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Personel Adı</label>
    <input type="text" asp-for="FirstName" class="form-control" />
    <br />
    <label>Personel Soyadı</label>
    <input type="text" asp-for="LastName" class="form-control" />
    <br />
    <label>Personel Ünvanı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Personel Yaşı</label>
    <input type="text" asp-for="Age" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Personeli Ekle</button>
</form>
